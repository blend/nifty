{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": [
			"es2015",
			"es6"
		],
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declarationDir": "dist/types",
		"outDir": "dist",
		"typeRoots": [
			"node_modules/@types"
		]
  },
  "noUnusedLocals": true,
  "inlineSourceMap": true,
	"include": [
		"./examples/*.ts",
    "./src/*.ts",
    "./test/*.test.ts"
	],
	"exclude": [
		"node_modules"
	]
}