{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": [
			"es2015",
			"es6"
		],
		"strict": true,
		"sourceMap": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declarationDir": "dist/types",
		"outDir": "compiled",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"include": [
		"./examples/*.ts",
		"./src/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}