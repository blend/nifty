{
  "name": "nifty",
  "version": "0.1.0",
  "description": "nifty is a lite orm for typescript",
  "keywords": [
    "postgres",
    "pg",
    "libpq",
    "database",
    "orm"
  ],
  "license": "MIT",
  "homepage": "https://github.com/blendlabs/nifty",
  "scripts": {
    "build": "tsc -p .",
    "buildClean": "npm run clean && npm run build",
    "clean": "rm -rf ./dist",
    "test": "bash ./docker/test.sh"
  },
  "repository": "https://github.com/blendlabs/nifty",
  "author": "Will Charczuk",
  "main": "dist/src/connection.js",
  "typings": "dist/types/src/index.d.ts",
  "dependencies": {
    "lodash": "^4.17.4",
    "pg": "^7.3.0",
    "promise": "^8.0.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.77",
    "@types/pg": "^7.1.4",
    "ava": "^0.22.0",
    "nyc": "^11.2.1",
    "typescript": "^2.5.3"
  },
  "ava": {
    "files": [
      "**/*.test.js"
    ],
    "source": [
      "dist/src/**/*.js"
    ],
    "failWithoutAssertions": true,
    "babel": "inherit"
  },
  "nyc": {
    "include": [
      "dist/src/**/*.js"
    ],
    "exclude": [
      "*.d.ts",
      "*.js.map",
      "interfaces.js"
    ],
    "statements": 75,
    "lines": 75,
    "functions": 70,
    "branches": 68,
    "reporter": [
      "html",
      "text"
    ]
  }
}
